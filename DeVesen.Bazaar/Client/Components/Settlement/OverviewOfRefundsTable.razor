
<div class="d-flex flex-row">
    <div class="w-75">
        <MudText Typo="Typo.body1">offener Umsatz</MudText>
    </div>
    <div class="w-25">
        <MudText Typo="Typo.body1" Align="Align.End">@($"{OpenSales:N2} €")</MudText>
    </div>
</div>

<div class="d-flex flex-row">
    <div class="w-75">
        <MudText Typo="Typo.body1">Anteil des Veranstalter</MudText>
    </div>
    <div class="w-25">
        <MudText Typo="Typo.body1" Align="Align.End">@($"{OrganizerShares:N2} €")</MudText>
    </div>
</div>

<div class="d-flex flex-row pl-5 pr-10">
    <div class="w-75">
        <MudText Typo="Typo.body1">Umsatzanteil</MudText>
    </div>
    <div class="w-25">
        <MudText Typo="Typo.body1" Align="Align.End">@($"{ShareOfSales:N2} €")</MudText>
    </div>
</div>
<div class="d-flex flex-row pl-5 pr-10">
    <div class="w-75">
        <MudText Typo="Typo.body1">Artikelprovision</MudText>
    </div>
    <div class="w-25">
        <MudText Typo="Typo.body1" Align="Align.End">@($"{ArticleCommission:N2} €")</MudText>
    </div>
</div>

<MudDivider />

<div class="d-flex flex-row">
    <div class="w-75">
        <MudText Typo="Typo.h6">Auszuzahlender Betrag</MudText>
    </div>
    <div class="w-25">
        <MudText Typo="Typo.h6" Align="Align.End">@($"{SellerShares:N2} €")</MudText>
    </div>
</div>

@code {
    private double SellerShares => OpenSales - OrganizerShares;
    private double OrganizerShares => ShareOfSales + ArticleCommission;

    [Parameter]
    public double OpenSales { get; set; }

    [Parameter]
    public double ShareOfSales { get; set; }

    [Parameter]
    public double ArticleCommission { get; set; }
}
