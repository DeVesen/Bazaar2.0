
<DvButton Color="@Color"
          Disabled="@Disabled"
          FullWidth="@FullWidth"
          Size="@Size"
          EndIcon="@ShownIcon"
          IconSize="@Size"
          OnClick="@OnClick"
          Class="@Class"
          Style="@Style"
          Tag="@Tag">
    @Value
</DvButton>

@code {

    private string? ShownIcon => Value.HasValue ? @Icons.Material.TwoTone.Euro : null;

    [Parameter]
    public double? Value { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public Size Size { get; set; } = Size.Large;

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool FullWidth { get; set; } = true;

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Style { get; set; }

    [Parameter]
    public object? Tag { get; set; }
}
